{% extends '::base.html.twig' %}
{% block body %}{{ tinymce_init() }}
{% block content %}
<div id="page-wrapper">
            <div class="row">
                <div class="col-lg-12">
                    <h1 class="page-header">Tables</h1>
                </div>
                <!-- /.col-lg-12 -->
            </div>
            <!-- /.row -->
            <div class="row">
                <div class="col-lg-12">
                    <div class="panel panel-default">
                        <div class="panel-heading">
                            DataTables Advanced Tables
			
                        </div>
				<center><h2>Testimonials</h2></center>
		        </div>
				<center>
                                    <div style="width:70%">
                                    <form action="{{ path('acme_testiadd') }}" method="post" {{ form_enctype(form) }} class="form-group">
                                    <div class="error_div">    
					{{ form_errors(form.name)}}
					{{ form_errors(form.post) }}
					{{ form_errors(form.description) }}
                                    </div>
                                    <div class="form-group col-lg-12">
					{{ form_label(form.name, 'Name: ', {'label_attr': {'class': 'control-label col-sm-2'}}) }}
                                        <div class="col-sm-10">
					{{ form_widget(form.name, { 'attr': {'class': 'form-control','placeholder': 'Name'} }) }}
                                        </div>
				    </div>
                                    <div class="form-group col-lg-12">
					{{ form_label(form.post, 'Post: ', {'label_attr': {'class': 'control-label col-sm-2'}}) }}
                                        <div class="col-sm-10">
					{{ form_widget(form.post, { 'attr': {'class': 'form-control','placeholder': 'Post'} }) }}
                                        </div>
				    </div>
                                    <div class="form-group col-lg-12">
					{{ form_label(form.description, 'Description: ', {'label_attr': {'class': 'control-label col-sm-2'}}) }}
                                        <div class="col-sm-10">
					{{ form_widget(form.description, { 'attr': {'class': 'form-control','placeholder': 'Description'} }) }}
                                        </div>
				    </div>
				    <div class="form-group col-lg-6">
                                        <input type="submit" formnovalidate value="Save" name="insert" class="btn btn-primary" />
                                        <input type="reset" name="Reset" value="Reset" class="btn btn-danger" onclick="javascript:window.location.href='{{ path('acme_info_testimonials') }}'"/>
                                    </div>
				</form>
				</center>			
		    </div>
		</div>
	</div>
</div>	
{% endblock %}
{% endblock %}
