{% extends '::base.html.twig' %}
{% block body %}
{% block content %}
    <div class="row">
        <div class="col-lg-12">
            <h1 class="page-header">Logo Add Form</h1>
        </div>
    </div>
    <!-- /.row -->
    <div class="row">
    <center>
        <form action="{{ path('acme_logoadd') }}" method="post" {{ form_enctype(form) }} class="form-group">
        {% if not form.vars.valid %}
        <div class="alert alert-danger">    
            {{ form_errors(form.logo)}}
            {{ form_errors(form.status) }}
        </div>
        {% endif %}
        <div class="form-group col-lg-12">
            {{ form_label(form.logo, 'Logo: ', {'label_attr': {'class': 'control-label col-sm-2'} }) }}
            <div class="col-sm-2">
            {{ form_widget(form.logo, { 'attr': {'class': 'btn btn-default btn-file'} }) }}
            </div>
        </div>
        <div class="form-group col-lg-12">
            {{ form_label(form.status, 'Status: ', {'label_attr': {'class': 'control-label col-sm-2'}}) }}
            <div class="col-sm-1">
            {{ form_widget(form.status, { 'attr': {'class': 'form-control','placeholder': 'Status'} }) }}
            </div>
        </div>
        <div class="form-group col-lg-6">
            <input type="submit" formnovalidate value="Save" name="insert" class="btn btn-primary" />
            <input type="reset" name="Reset" value="Reset" class="btn btn-danger" onclick="javascript:window.location.href='{{ path('acme_info_testimonials') }}'"/>
        </div>
    </form>
    </center>			
</div>
{% endblock %}
{% endblock %}
