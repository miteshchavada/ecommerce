{% extends '::base.html.twig' %}
{% block body %}
{% block content %}

<div id="page-wrapper">
            <div class="row">
                <div class="col-lg-12">
                    <h1 class="page-header">Tables</h1>
                </div>
                <!-- /.col-lg-12 -->
            </div>
            <!-- /.row -->
            <div class="row">
                <div class="col-lg-12">
                    <div class="panel panel-default">
                        <div class="panel-heading">
                            DataTables Advanced Tables
				<div style="float:right; margin-top:-15px;" class="panel-heading"><a href="services/add"><button type="button" class="btn btn-primary btn-sm">Add Services</button></a></div>
                        </div>
                        <!-- /.panel-heading -->
                        <div class="panel-body">
                            <div class="table-responsive">
                                <table class="table table-striped table-bordered table-hover" id="dataTables-example">
                                    <thead>
                                        <tr>
                                            <th>Serial No</th>
                                            <th>Title</th>
					    <th>Image</th>
                                            <th>Description</th>
                                            <th>Operations</th>
                                        </tr>
                                    </thead>
                                    <tbody>
					{% for service in services %}
                                         <tr class="gradeA">
                                            <td>{{ loop.index }}</td>
                                            <td>{{ service.title }}</td>
                                            <td><img src="{{asset(['uploads/services/',service.id,'/',service.image]|join)}}" style="width:80px; height: 50px;" /></td>
                                            <td class="center">{{ service.description }}</td>
                                            <td class="center">
						<a href="services/edit?id={{ service.id }}" class="btn btn-primary">edit</a>
        					<a href="services/delete?id={{ service.id }}" class="btn btn-danger" onclick="return confirm('are sure delete?')">delete</a></li>
					    </td>
                                        </tr>
					{% endfor %}
                                    </tbody>
				    <!-- div>{{ paginator|raw }}</div--> 
                                </table>
                            </div>
                        <!-- /.panel-body -->
                    </div>
                    <!-- /.panel -->
                </div>
                <!-- /.col-lg-12 -->
            </div>
            <!-- /.row -->

{% endblock %}
{% endblock %}
