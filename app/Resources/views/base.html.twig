<body>

    <div id="wrapper">

        <!-- Navigation -->
        <nav class="navbar navbar-default navbar-static-top" role="navigation" style="margin-bottom: 0">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="sr-only">Toggle navigation</span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                {% if is_granted("ROLE_USER") %}
                    <a class="navbar-brand" href="{{ path('acme_store')}}">SVIPL Admin</a>
                {% else %}    
                    <a class="navbar-brand" href="{{ path('fos_user_security_login')}}">SVIPL Admin</a>
                {% endif %}    
            </div>
            <!-- /.navbar-header -->

            <ul class="nav navbar-top-links navbar-right">
                <!-- /.dropdown -->
                <li class="dropdown">
                    <a class="dropdown-toggle" data-toggle="dropdown" href="#">
                        {% if is_granted("ROLE_USER") %}
                        <i class="fa fa-user fa-fw"></i>{{ 'layout.logged_in_as'|trans({'%username%': app.user.username}, 'FOSUserBundle') }} <i class="fa fa-caret-down"></i>
