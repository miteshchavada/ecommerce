                        </li>
                        <li class="divider"></li>
                        <li><a href="{{ path('fos_user_security_logout') }}">
                            <i class="fa fa-sign-out fa-fw"></i> Logout</a>
                        </li>
                    </ul>
                </li>
            </ul>
            {% if is_granted("ROLE_USER") %}
            <div class="navbar-default sidebar" role="navigation">
                <div class="sidebar-nav navbar-collapse">
                    <ul class="nav" id="side-menu">
                        {% if is_granted('ROLE_ADMIN') %}
                            <li><a href="{{ path('acme_user') }}"><i class="fa fa-user fa-fw"></i>User</a></li>
                        {% endif %}    
                        <li><a href="{{ path('acme_store') }}"><i class="fa fa-dashboard fa-fw"></i>Store</a></li>
                        <li><a href="{{ path('acme_image') }}"><i class="fa fa-table fa-fw"></i>Slider Image</a></li>
                        <li><a href="{{ path('acme_info') }}"><i class="fa fa-sitemap fa-fw"></i>Info</a></li>
                        <li><a href="{{ path('acme_info_welcome') }}"><i class="fa fa-edit fa-fw"></i>Front</a></li>
                        <li><a href="{{ path('acme_info_testimonials') }}"><i class="fa fa-wrench fa-fw"></i>Testimonials</a></li> 	
                        <li><a href="{{ path('acme_info_newslist') }}"><i class="fa fa-files-o fa-fw"></i>News</a></li>
                        <li><a href="{{ path('acme_info_serviceslist') }}"><i class="fa fa-envelope fa-fw"></i>Services</a></li>
                        <li><a href="{{ path('acme_info_contactus') }}"><i class="fa fa-bell fa-fw"></i>ContactUs</a></li>
                    </ul>
                </div>
            </div>
            {% endif %}        
        </nav>

        <div id="page-wrapper">
            {% block body %}{% endblock %}
        </div>

    </div>
    <!-- jQuery Version 1.11.0 -->
    <script src="{{ asset('bundles/acmeuser/js/jquery-1.11.0.js') }}"></script>
    <!-- Bootstrap Core JavaScript -->
    <script src="{{ asset('bundles/acmeuser/js/bootstrap.min.js') }}"></script>
    <!-- Metis Menu Plugin JavaScript -->
    <script src="{{ asset('bundles/acmeuser/js/plugins/metisMenu/metisMenu.min.js') }}"></script>

    <!-- Custom Theme JavaScript -->
    <script src="{{ asset('bundles/acmeuser/js/sb-admin-2.js') }}"></script>
    <!-- DataTables JavaScript -->
    <script src="{{ asset('bundles/acmeuser/js/plugins/dataTables/jquery.dataTables.js') }}"></script>
    <script src="{{ asset('bundles/acmeuser/js/plugins/dataTables/dataTables.bootstrap.js') }}"></script>
    <script>
        var oTable;
        $(document).ready(function () {
            $('#dataTables-example').dataTable();
        });
        $(document).ready(function () {
            oTable = $('#dataTables-example1').dataTable();
        });
        $(document).ready(function(){
           $(".btn-status").click(function(){
                id = $(this).attr('id');
                $.ajax({
                    url: "{{ path('acme_user_status') }}",
                    type: "POST",
                    data: {id : id},
                    dataType: "json",
                    beforeSend: function(){
                        
                    },
                    success: function(result){
                        //oTable.fnDraw();
                        if(result.status == true){
                            $("a#"+result.id).removeClass("btn-danger").addClass("btn-success").html("Enable");
                        }else{
                            $("a#"+result.id).removeClass("btn-success").addClass("btn-danger").html("Disabled");;
                        }
                        {#if(result.status == true){
                            $("a.btn-status").removeClass("btn-danger");
                            $("a.btn-status").addClass("btn-success");
                        }else{
                            $("a.btn-status").removeClass("btn-success");
                            $("a.btn-status").addClass("btn-danger");
                        }#}
                    },
                    error: function(e){
                        alert(e);
                    },
                });
           }); 
        });
    </script>
</body>

</html>
